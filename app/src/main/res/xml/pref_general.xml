<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/privacy">
        <ListPreference
            android:title="@string/selectContacts"
            android:key="ContactPhone"
            android:summary="@string/selectContactsHint" />
        <EditTextPreference
            android:inputType="numberDecimal|numberSigned"
            android:key="HelpCode"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="@string/authTitleHint"
            android:title="@string/authTitle" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/menuAbout">
        <PreferenceScreen
            android:summary="@string/openSourceHint"
            android:title="@string/openSource">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/JackHang/LocationSMS" />
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>